{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "bun svelte:build",
    "beforeDevCommand": {
      "script": "run-s python:build svelte:dev"
    },
    "devPath": "http://localhost:5173",
    "distDir": "../build"
  },
  "package": {
    "productName": "Mod.io Manager",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "sidecar": true,
        "scope": [
          {
            "name": "bin/python/test",
            "sidecar": true
          }
        ]
      }
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 600,
        "resizable": true,
        "title": "Mod.io Manager",
        "width": 800
      }
    ],
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.tauri.dev",
      "externalBin": ["bin/python/test"],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    }
  }
}